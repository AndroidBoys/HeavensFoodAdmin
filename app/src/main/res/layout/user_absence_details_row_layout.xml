<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:elevation="8sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/userAbsenceName"
                android:layout_width="match_parent"
                android:text="Arvind"
                android:textColor="@color/md_black_1000"
                android:textStyle="bold"
                android:layout_marginStart="3sp"
                android:fontFamily="@font/josefin_bold"
                android:textSize="24sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/userPhoneNumber"
                android:layout_width="match_parent"
                android:text="7895922259"
                android:layout_marginStart="3sp"
                android:fontFamily="@font/josefin_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/userAbsenceDate"
                android:layout_width="match_parent"
                android:text="Absence: 12/08/17 to 18/08/17"
                android:layout_marginStart="3sp"
                android:fontFamily="@font/josefin_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content" />


        </LinearLayout>

</androidx.cardview.widget.CardView>