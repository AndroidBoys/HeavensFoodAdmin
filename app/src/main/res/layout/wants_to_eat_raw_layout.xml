<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginTop="3dp"
    app:cardElevation="4dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="25dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <ProgressBar
                android:id="@+id/imageProgressBar"
                android:padding="95dp"
                android:indeterminateTint="@color/colorPrimary"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/wantsFoodImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/wantsFoodNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignBottom="@id/wantsFoodImageView"
                android:text="food Name"
                android:textSize="20dp"
                android:background="#8888"
                android:fontFamily="@font/josefin_bold"
                android:textColor="@color/blackColor"
                android:textStyle="bold"/>


        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/wantsFoodDescriptionTextView"
            android:layout_width="wrap_content"
            android:fontFamily="@font/josefin_bold"
            android:textSize="15sp"
            android:text="food Description will be here . This food is one of the best food in the market Here your are getting the facility of not only eating"
            android:layout_height="match_parent"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>