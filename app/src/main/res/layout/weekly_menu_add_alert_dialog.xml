<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="250dp"
    android:minHeight="270dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/weeklyFoodNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/josefin_bold"
        android:hint="Food Name"
        android:maxLines="2"
        android:textColor="@color/md_black_1000"/>

    <EditText
        android:id="@+id/weeklyDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/josefin_bold"
        android:hint="Description"
        android:maxLines="4"
        android:textColor="@color/md_black_1000"
        />

    <Spinner
        android:id="@+id/weeklyMenuSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/josefin_bold"
        android:orientation="horizontal"
        android:textColor="@color/md_black_1000">


        <info.hoang8f.widget.FButton
            android:id="@+id/weeklySelectButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="Select Image"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/weeklyUploadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:fontFamily="@font/josefin_bold"
            android:text="Upload"
            android:textColor="@color/md_black_1000"/>


    </LinearLayout>


</LinearLayout>